<article class="post card">
    <div class="card-header title">
        <h3>{{title}}</h3>
    </div>
    <div class="card-body post-content">
        <p><b>{{rating}} out of 10</b></p>
        <p>{{content}}</p>
        {{vote_count}} {{format_plural 'point' vote_count}} by {{user.username}} on
        {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural 'comment' comments.length}}</a>
        |
        <a href='/dashboard/edit/{{id}}' class='edit-link'>Edit post</a>
    </div>
</article>